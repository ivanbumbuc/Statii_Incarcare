@model Statii_Incarcare.Models.Db.Utilizatori

@{
    ViewData["Title"] = "Login";
}
<style>
    #demotext {
color: #444444;
background: #FFFFFF;
text-shadow: 1px 0px 1px #CCCCCC, 0px 1px 1px #EEEEEE, 2px 1px 1px #CCCCCC, 1px 2px 1px #EEEEEE, 3px 2px 1px #CCCCCC, 2px 3px 1px #EEEEEE, 4px 3px 1px #CCCCCC, 3px 4px 1px #EEEEEE, 5px 4px 1px #CCCCCC, 4px 5px 1px #EEEEEE, 6px 5px 1px #CCCCCC, 5px 6px 1px #EEEEEE, 7px 6px 1px #CCCCCC;
color: #444444;
background: #FFFFFF;
}
</style>
<h1 id="demotext">Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parola" class="control-label"></label>
                <input asp-for="Parola" class="form-control" type="password" />
                <span asp-validation-for="Parola" class="text-danger"></span>
            </div>
            <br />
            <div>
                <p style="color:red;">@ViewData["Verificare"]</p>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" style="display: block;
  margin-left: auto;
  margin-right: auto;"/>
            </div>
        </form>
        <br />
        <a  asp-action="CreareCont" style="display: block;
  margin-left: 100px;">Doriti sa creati un cont nou?</a>
    </div>
</div>

<div>
    <br />
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
